<div id='edit-box'>

  <style>
    .ui-helper-reset {
      margin: 0;
      padding: 0;
      border: 0;
      outline: 0;
      line-height: 1.3;
      text-decoration: none;
      font-size: 100%;
      list-style: none;
    }
    .ui-helper-clearfix:before,
    .ui-helper-clearfix:after {
      content: "";
      display: table;
      border-collapse: collapse;
    }
    .ui-helper-clearfix:after {
      clear: both;
    }
    .ui-helper-clearfix {
      min-height: 0; /* support: IE7 */
    }
    .ui-tabs {
      position: relative;/* position: relative prevents IE scroll bug (element with position: relative inside container with overflow: auto appear as "fixed") */
      padding: .2em;
    }
    .ui-tabs .ui-tabs-nav {
      margin: 0;
      padding: .2em .2em 0;
    }
    .ui-tabs .ui-tabs-nav li {
      list-style: none;
      float: left;
      position: relative;
      top: 0;
      margin: 1px .2em 0 0;
      border-bottom-width: 0;
      padding: 0;
      white-space: nowrap;
    }
    .ui-tabs .ui-tabs-nav li a {
      float: left;
      padding: .5em 1em;
      text-decoration: none;
    }
    .ui-tabs .ui-tabs-nav li.ui-tabs-active {
      margin-bottom: -1px;
      padding-bottom: 1px;
      background-color: #DCF8CD;
    }
    .ui-tabs .ui-tabs-nav li.ui-tabs-active a,
    .ui-tabs .ui-tabs-nav li.ui-state-disabled a,
    .ui-tabs .ui-tabs-nav li.ui-tabs-loading a {
      cursor: text;
      color: black;
    }
    .ui-tabs .ui-tabs-nav li a, /* first selector in group seems obsolete, but required to overcome bug in Opera applying cursor: text overall if defined elsewhere... */
    .ui-tabs-collapsible .ui-tabs-nav li.ui-tabs-active a {
      cursor: pointer;
    }
    .ui-tabs .ui-tabs-panel {
      display: block;
      border-width: 0;
      padding: 0.4em 0.4em;
      background: none;
    }

    /* Component containers
    ----------------------------------*/
    .ui-widget {
      font-family: Verdana,Arial,sans-serif;
      font-size: 1.1em;
    }
    .ui-widget .ui-widget {
      font-size: 1em;
    }
    .ui-widget input,
    .ui-widget select,
    .ui-widget textarea,
    .ui-widget button {
      font-family: Verdana,Arial,sans-serif;
      font-size: 1em;
    }
    .ui-widget-content {
      border: 1px solid #a6c9e2;
      background: #fcfdfd;
      color: #222222;
    }
    .ui-widget-content a {
      color: #222222;
    }
    .ui-widget-header {
      background-color: #d1e7fd;
      color: #eaf5f7;
      font-weight: bold;
    }
    .ui-widget-header a {
      color: #eaf5f7;
    }

    /* Interaction states
    ----------------------------------*/
    .ui-state-default,
    .ui-widget-content .ui-state-default,
    .ui-widget-header .ui-state-default {
      border: 1px solid white;
      background: #0078ae;
      font-weight: normal;
      color: #ffffff;
    }
    .ui-helper-reset {
      margin: 0;
      padding: 0;
      border: 0;
      outline: 0;
      line-height: 1.3;
      text-decoration: none;
      font-size: 100%;
      list-style: none;
    }
    .ui-helper-clearfix:before,
    .ui-helper-clearfix:after {
      content: "";
      display: table;
      border-collapse: collapse;
    }
    .ui-helper-clearfix:after {
      clear: both;
    }
    .ui-helper-clearfix {
      min-height: 0; /* support: IE7 */
    }
    /* Corner radius */
    .ui-corner-all,
    .ui-corner-top,
    .ui-corner-left,
    .ui-corner-tl {
      border-top-left-radius: 5px;
    }
    .ui-corner-all,
    .ui-corner-top,
    .ui-corner-right,
    .ui-corner-tr {
      border-top-right-radius: 5px;
    }
    .ui-corner-all,
    .ui-corner-bottom,
    .ui-corner-left,
    .ui-corner-bl {
      border-bottom-left-radius: 5px;
    }
    .ui-corner-all,
    .ui-corner-bottom,
    .ui-corner-right,
    .ui-corner-br {
      border-bottom-right-radius: 5px;
    }
   #edit-box {
    position: absolute;
    -webkit-box-shadow: -3px 5px 6px black;
    -moz-box-shadow: -3px 5px 6px black;
    box-shadow: -3px 5px 6px black;
    background-color: #DCF8CD;
    z-index: 6;
    padding: 0 10px 10px 10px;
    border: 2px solid black;
    transition: none;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    -khtml-border-radius: 15px;
    border-radius: 15px;
    width: 500px;
  }
  .fi-30x .edit-box-button {
    margin-top: 10px;
    line-height: 2;
    font-weight: bold;
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;
    -khtml-border-radius: 8px;
    border-radius: 8px;
  }
  #delete-field, #done-button {
    float: right;
  }
  #edit-box tr {
    margin: 2px;
  }
  #edit-box td {
    text-align: right;
    padding: 0 4px 0 0;
    white-space: nowrap;
  }
  #edit-box td + td {
    text-align: left;
    padding: 0 0 0 4px;
  }
  #edit-box .style-group:nth-child(even) {
    background-color: #d1e7fd;
  }
  #edit-box .style-option {
    padding: 3px;
    float: left;
  }
  #edit-box input {
    text-align: left;
  }
  .fi-30x .tip {
    font-weight: bold;
    font-size: 12px;
    font-style: italic;
  }
  </style>

  <ul>
    <li><a href="#customizations">Basic Customization</a></li>
    <li><a href="#styling">Styling Options</a></li>
    <li><a href="#size-position">Size and Position</a></li>
  </ul>

  <div
    class='edit-box-button'
    id='duplicate-field'
    style="background-color: #d1e7fd; display: inline-block;
      border: 2px solid black; padding: 2px;"
    >
    Drag a copy of this field from here</div>

  <button
    class='edit-box-button'
    id='done-button'
    style="background-color: white;"
    >Done editing</button>

  <div id='customizations'></div>

  <div
    id="styling">

    <div class='style-group group'>
      <div class="style-option">
        <label>Font-Size <span class='tip'>(digits only)</span>:
          <input
            type="number"
            data-css="font-size"
            min="1"
            max="999"
            size='5'
            value="<%= parseInt($field.css('font-size')) %>"
            name="">
        </label>
      </div>

      <div
        class="style-option"
        style="float: right; padding: 8px 3px 7px 3px;">

        <label>
          <input
            class='font-weight-option'
            name=''
            type='checkbox'
            data-css='font-weight'
            data-checked='bold'
            data-unchecked='normal'
            <% if ($field.css('font-weight') === 'bold'){ %>
              <%= 'checked' %>
            <% } %>
          > Bold
        </label>

        &nbsp&nbsp&nbsp

        <label>
          <input
            class='font-style-option'
            name=''
            type='checkbox'
            data-css='font-style'
            data-checked='italic'
            data-unchecked='normal'
            <% if ($field.css('font-style') === 'italic'){ %>
              <%= 'checked' %>
            <% } %>
          > Italics
        </label>

        &nbsp&nbsp&nbsp

        <label>
          <input
            class='text-decoration-option'
            name=''
            type='checkbox'
            data-css='text-decoration'
            data-checked='underline'
            data-unchecked='none'
            <% if ($field.css('text-decoration').indexOf('underline') > -1){ %>
              <%= 'checked' %>
            <% } %>
          > Underline
        </label>

<!--         <label>Font-Weight:
          <label>
            <input
              class="font-weight-option"
              type="radio"
              name=""
              data-css="font-weight"
              value="bold">
              Bold
          </label>

          <label>
            <input
              class="font-weight-option"
              type="radio"
              name=""
              data-css="font-weight"
              value="normal">
              Normal
          </label>
        </label> -->
      </div>

      <div class="style-option">
        <label>Font-Family:</label>
        <select data-css="font-family" name="">
          <option class="font-family-option"></option>
          <option class="font-family-option">
            sans-serif</option>
          <option class="font-family-option">
            serif</option>
          <option class="font-family-option">
            monospace</option>
          <option class="font-family-option">
            cursive</option>
          <option class="font-family-option">
            fantasy</option>
          <option class="font-family-option">
            Arial, Helvetica, sans-serif</option>
          <option class="font-family-option">
            Arial Black, Gadget, sans-serif</option>
          <option class="font-family-option">
            Comic Sans MS, cursive, sans-serif</option>
          <option class="font-family-option">
            Courier New, Courier, monospace</option>
          <option class="font-family-option">
            Georgia, serif</option>
          <option class="font-family-option">
            Impact, Charcoal, sans-serif</option>
          <option class="font-family-option">
            Lucida Console, Monaco, monospace</option>
          <option class="font-family-option">
            Lucida Sans Unicode, Lucida Grande, sans-serif</option>
          <option class="font-family-option">
            Palatino Linotype, Book Antiqua, Palatino, serif</option>
          <option class="font-family-option">
            Tahoma, Geneva, sans-serif</option>
          <option class="font-family-option">
            Times New Roman, Times, serif</option>
          <option class="font-family-option">
            Trebuchet MS, Helvetica, sans-serif</option>
          <option class="font-family-option">
            Verdana, Geneva, sans-serif</option>
        </select>
      </div>
    </div>

    <div class='style-group group'>
      <div class="style-option">
        <label>Text Color:
          <input
            type="text"
            data-css="color"
            value="<%= $field.css('color') || 'black' %>"
            name="">
            <span class='tip'>(RGB or color names, like red)</span>
        </label>
      </div>

      <div class="style-option">
        <label>Background Color:
          <input
            type="text"
            data-css="background-color"
            name="">
        </label>
      </div>

      <div class="style-option">
        <label>Padding:
          <input
            type="text"
            data-css="padding"
            value="<%= $field.css('padding')%>"
            name="">
          <span class='tip'>(px, em, or %)</span>
        </label>
      </div>
    </div>

    <div class='style-group group'>
      <div class="style-option">
        <label>Border Type:
          <select data-css="border-style" name="">
            <option class="border-style-option"></option>
            <option class="border-style-option">none</option>
            <option class="border-style-option">solid</option>
            <option class="border-style-option">hidden</option>
            <option class="border-style-option">dotted</option>
            <option class="border-style-option">dashed</option>
            <option class="border-style-option">double</option>
            <option class="border-style-option">groove</option>
            <option class="border-style-option">ridge</option>
            <option class="border-style-option">inset</option>
            <option class="border-style-option">outset</option>
          </select>
        </label>
      </div>

      <div
        class="style-option"
        style="float: right;">
        <label>Border Width:
          <input
            type="number"
            data-css="border-width"
            min="1"
            max="999"
            size='5'
            value="<%= (parseInt($field.css('border-width')) ||
              $field.css('border-width', '1')) %>"
            name="">
          <span class='tip'>(digits only)</span>
        </label>
      </div>

      <div class="style-option">
        <label>Border color:
          <input
            type="text"
            data-css="border-color"
            value="<%= $field.css('border-color') || 'black' %>"
            size='18'
            name="">
        </label>
      </div>
    </div>
  </div>

  <div id='size-position'>
    <div class='style-group group'>
      <div class="style-option">
        <label>Width:
          <input
            type="text"
            size='7'
            data-css="width"
            value="<%= $field.css('width')%>"
            name="">
          <span class='tip'>(px, em, or %)</span>
        </label>
      </div>

      <div class="style-option" style='float: right;'>
        <label>Height:
          <input
            type="text"
            size='7'
            data-css="height"
            value="<%= $field.css('height')%>"
            name="">
          <span class='tip'>(px, em, or %)</span>
        </label>
      </div>
    </div>

    <div class='style-group group'>
      <table style='width: 100%'>
        <tr>
          <td>
            <div
              class="style-option"
              style= "float: left">
              <button
                class="alignment"
                data-align="left">
                Align left
              </button>
            </div>
          </td>

          <td style="text-align: center">
            <div
              class="style-option"
              style="width: 100%;">
              <button
                class="alignment"
                data-align="center">
                Align center
              </button>
            </div>
          </td>

          <td>
            <div
              class="style-option"
              style='float: right'>
              <button
                class="alignment"
                data-align="right">
                Align right
              </button>
            </div>
          </td>
        </tr>
      </table>
    </div>

    <div class='style-group group'>
      <div class="style-option">
        <button
          id="pull-front">
          Pull to the front
        </button>
      </div>

      <div
        class="style-option"
        style="float: right;">
        <button
          id="push-back">
          Push to the background
        </button>
      </div>
    </div>
  </div>

  <button
    class='edit-box-button'
    id='save-button'
    style="background-color: #ffffc2;"
    >Save Form</button>

  <button
    class='edit-box-button'
    id='delete-field'
    style="background-color: red;"
    >Delete this field</button>

</div>