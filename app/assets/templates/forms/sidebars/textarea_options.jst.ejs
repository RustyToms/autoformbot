<div id="textarea-sidebar">

  <h3>Customize your Textarea</h3>

  <table>
    <tr>
      <td>
        <label>Label:</label>
      </td>
      <td>
        <input type='text'
          name='textarea-label'
          onClick="$(this).select()"
          value='<%= $field.find('.textarea-label').text() %>'>
      </td>
    </tr>

    <tr>
      <td>
        <label>Height (in number of lines)</label>
      </td>
      <td>
        <input
          type='text'
          data-attribute='rows'
          value='<%= $textarea.attr('rows') %>'
          name='textarea'/>
      </td>
    </tr>

    <tr>
      <td>
        <label>Width (in number of characters)</label>
      </td>
      <td>
        <input
          type='text'
          data-attribute='cols'
          value='<%= $textarea.attr('cols') %>'
          name='textarea'/>
      </td>
    </tr>

    <tr>
      <td>
        <label>
          <input
            type='checkbox'
            name='requiredCheckbox'
            <% if($field.hasClass('required')) { %>
              <%= 'checked' %>
              <% } %>/>
            Required Field
        </label>
      </td>
      <td>
      </td>
    </tr>
  </table>
</div>