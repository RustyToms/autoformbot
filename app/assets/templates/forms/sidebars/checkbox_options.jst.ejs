<% var $field = ($(field) || $('<div></div>')) %>

<div class="sidebar" id="checkbox-sidebar">

<h2>Customize your Checkbox</h2>

<label>Label:
  <input type='text'
    name='checkbox-label'
    autofocus
    value='<%= $field.find('.checkbox-label').html().trim() %>'>
</label><br>


<label>
  <input
    type='checkbox'
    name="prefilled-check"
    <% myField = $field %>
    <% if($field.find('.checkbox').get(0).hasAttribute('checked')) { %>
      <%= 'checked' %>
      <% } %>
    />
  Prefilled check
</label><br>

<label>
  <input
    type='checkbox'
    name='requiredCheckbox'
    <% if($field.hasClass('required')) { %>
      <%= 'checked' %>
      <% } %>
  />
    Check Required
</label>

</div>
