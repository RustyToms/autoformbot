<div class='select-option-config'>
  <label
    style="display: inline-block"
  >Option <input
      type='text'
      value='<%= value %>'
      onClick="this.select()"
      name='<%= name %>'/><br>
  </label>

  <button
    class='delete-button delete-option'
    name='<%= name %>'
  >Delete</button>
</div>