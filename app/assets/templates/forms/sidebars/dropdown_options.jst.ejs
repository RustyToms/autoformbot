<div id="dropdown-sidebar">

  <h3>Customize your Dropdown</h3>

  <table>
    <tr>
      <td>
        <label>Label:&nbsp&nbsp
          <input type='text'
            name='dropdown-label'
            onClick='this.select()'
            value='<%= label %>'>
        </label>

        <button class='add-option'>Add an Option</button>
      </td>
    </tr>
  </table>

  <table class='dropdowns'></table>

  <label>
    <input
      type='checkbox'
      name='requiredCheckbox'
      <% if($field.hasClass('required')) { %>
        <%= 'checked' %>
        <% } %>
    />
      Required Field
  </label>
</div>