<span class='checkbox-option' >

  <input 
		type='checkbox' 
		id='<%= klass %>' 
		name='results[<%= optionName %>][<%= name %>]' 
		class='<%= klass %>' 
		value='<%= value %>'

		<% if (checked) { %>
			<%= checked %>
		<% } %>
		>

  <label 
		for='<%= klass %>' 
		class='<%= klass %>-label'><%= optionName %></label>

</span>