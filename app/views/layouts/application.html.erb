<!DOCTYPE html>
<html>
<head>
  <title>AutoFormBot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <li>
    Signed in as "<%= current_user.email %>"
    <%= link_to('Log Out', destroy_user_session_path, :method => :delete) %>
    </li>
  <% end %>

  <ul class="color-swatches group">
    <li style="background-color: #8FCBFB;">$blue</li>
    <li style="background-color: #D1E7FD;">$faded-blue</li>
    <li style="background-color: #EFFAFF;">$very-pale-blue</li>
    <li style="background-color: #D2FFB3;">$light-green</li>
    <li style="background-color: #DCF8CD;">$pale-green</li>
    <li style="background-color: #FFFFC2;">$pale-yellow</li>
  </ul>

  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
